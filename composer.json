{
    "name": "mawuekom/laravel-form-request",
    "description": "Laravel Form Request adaptation for Lumen Framework",
    "keywords": [
        "mawuekom", 
        "laravel", 
        "lumen",
        "form-request",
        "lumen-form-request",
        "laravel-form-request"
    ],
    "homepage": "https://github.com/mawuekom/laravel-form-request",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ephra√Øm Seddor",
            "email": "seddorephraim7@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0",
        "illuminate/contract": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mawuekom\\FormRequest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mawuekom\\FormRequest\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mawuekom\\FormRequest\\FormRequestServiceProvider"
            ]
        }
    }
}
